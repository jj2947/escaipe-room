<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Pane fx:id="startScreen" prefHeight="702.0" prefWidth="1100.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nz.ac.auckland.se206.controllers.StartScreenController">
   <children>
      <VBox alignment="TOP_CENTER" layoutY="14.0" prefHeight="27.0" prefWidth="1100.0">
         <children>
            <Label fx:id="titleLabel" alignment="TOP_LEFT" text="WELCOME TO THE ESCAPE ROOM" />
         </children>
      </VBox>
      <VBox alignment="CENTER" layoutY="63.0" prefHeight="117.0" prefWidth="1100.0" spacing="10.0">
         <children>
            <Label fx:id="titleLabel1" alignment="TOP_LEFT" text="You are stuck at school and are going to miss the only bus home, you better hurry" wrapText="true" />
            <Label text="Difficulty:" />
            <Label text="Easy: Unlimited Hints" />
            <Label text="Medium: 5 Hints" />
            <Label text="Hard: No Hints" />
            <Label fx:id="titleLabel11" alignment="TOP_LEFT" text="Select a Difficulty and Time" wrapText="true" />
         </children>
      </VBox>
      <Button fx:id="startButton" disable="true" layoutX="167.0" layoutY="606.0" mnemonicParsing="false" onAction="#onStart" text="START">
         <font>
            <Font size="24.0" />
         </font>
      </Button>
      <Button fx:id="exitButton" layoutX="876.0" layoutY="609.0" mnemonicParsing="false" onAction="#onExit" text="EXIT">
         <font>
            <Font size="24.0" />
         </font>
      </Button>
      <VBox alignment="TOP_CENTER" layoutY="518.0" prefHeight="27.0" prefWidth="1100.0">
         <children>
            <Label fx:id="toDoLabel" alignment="TOP_LEFT" text="Please Select Time and Difficulty" />
         </children>
      </VBox>
      <VBox alignment="CENTER" layoutY="250.0" prefHeight="64.0" prefWidth="1100.0" spacing="30.0">
         <children>
            <Label text="DIFFICULTY:" />
            <HBox alignment="CENTER" prefHeight="58.0" prefWidth="1100.0" spacing="40.0">
               <children>
                  <Button fx:id="easyButton" mnemonicParsing="false" onAction="#onEasy" text="EASY" />
                  <Button fx:id="mediumButton" mnemonicParsing="false" onAction="#onMedium" text="MEDIUM" />
                  <Button fx:id="hardButton" mnemonicParsing="false" onAction="#onHard" text="HARD" />
               </children>
            </HBox>
         </children>
      </VBox>
      <VBox alignment="CENTER" layoutY="370.0" prefHeight="91.0" prefWidth="1100.0" spacing="30.0">
         <children>
            <Label text="TIME IN MINUTES:" />
            <HBox alignment="CENTER" prefHeight="64.0" prefWidth="1100.0" spacing="40.0">
               <children>
                  <Button fx:id="twoButton" mnemonicParsing="false" onAction="#onTwo" text="2" />
                  <Button fx:id="fourButton" mnemonicParsing="false" onAction="#onFour" text="4" />
                  <Button fx:id="sixButton" mnemonicParsing="false" onAction="#onSix" text="6" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</Pane>
