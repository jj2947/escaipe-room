<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<Pane fx:id="startScreen" prefHeight="740" prefWidth="1180" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nz.ac.auckland.se206.controllers.StartScreenController">
   <children>
      <VBox alignment="TOP_CENTER" layoutY="14.0" prefHeight="27.0" prefWidth="600.0">
         <children>
            <Label fx:id="titleLabel" alignment="TOP_LEFT" text="WELCOME TO THE ESCAPE ROOM" />
         </children>
      </VBox>
      <VBox alignment="TOP_CENTER" layoutY="122.0" prefHeight="27.0" prefWidth="600.0">
         <children>
            <Label fx:id="titleLabel1" alignment="TOP_LEFT" text="You are stuck at school and are going to miss the only bus home, you better hurry" wrapText="true" />
         </children>
      </VBox>
      <Button fx:id="startButton" layoutX="100.0" layoutY="370.0" mnemonicParsing="false" onAction="#onStart" text="START">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <Button fx:id="exitButton" layoutX="440.0" layoutY="370.0" mnemonicParsing="false" onAction="#onExit" text="EXIT">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
   </children>
</Pane>
