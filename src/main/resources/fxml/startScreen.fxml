            <Label text="Medium: 5 Hints" textFill="WHITE">
               <font>
                  <Font name="Courier New Bold" size="20.0" />
               </font></Label>
            <Label text="Hard: No Hints" textFill="WHITE">
               <font>
                  <Font name="Courier New Bold" size="20.0" />
               </font></Label>
         </children>
         <effect>
            <Glow />
         </effect>
      </VBox>
